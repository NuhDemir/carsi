{
  "name": "carsi",
  "version": "1.0.0",
  "description": "Çarşı is a nostalgic yet minimal brand identity project inspired by the warm, vibrant, and communal spirit of traditional Turkish bazaars from the 80s and 90s.",
  "main": "index.js",
  "scripts": {
    "dev": "cross-env NODE_ENV=development nodemon backend/server.js",
    "build": "npm install && npm install --prefix frontend && npm run build --prefix frontend",
    "start": "cross-env NODE_ENV=production node backend/server.js",
    "seed-admin": "node backend/seeds/createAdmin.js",
    "seed-categories": "node backend/seeds/createCategories.js",
    "seed-products": "node backend/seeds/createProducts.js",
    "seed-products-100": "node backend/seeds/createProducts100.js",
    "seed-home": "node backend/seeds/seedHome.js",
    "seed-all": "npm run seed-categories && npm run seed-products && npm run seed-admin && npm run seed-home"
  },
  "type": "module",
  "keywords": [],
