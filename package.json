  "license": "ISC",
  "dependencies": {
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^17.2.0",
    "express": "^4.19.2",
    "express-async-handler": "^1.2.0",
    "helmet": "^8.1.0",
    "mongoose": "^8.16.3",
    "morgan": "^1.10.1",
    "jsonwebtoken": "^9.0.0",
    "express-validator": "^6.15.0",
    "bcryptjs": "^2.4.3",
    "react-icons": "^5.5.0"
  },
  "devDependencies": {
    "nodemon": "^3.1.10"
  }
